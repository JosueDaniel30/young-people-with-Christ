
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funci칩n para verificar si el usuario est치 autenticado
    function isSignedIn() {
      return request.auth != null;
    }

    // Perfiles de Usuario: Solo el due침o escribe, todos los autenticados leen
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == userId;
    }

    // Reflexiones de la Comunidad
    match /reflections/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']));
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    // Altar de Oraci칩n
    match /prayerRequests/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn(); 
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    // Lecciones de Discipulado
    match /lessons/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']));
      allow delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }
  }
}
