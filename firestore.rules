
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función para verificar si el usuario está autenticado (incluye anónimos)
    function isSignedIn() {
      return request.auth != null;
    }

    // Reglas para la colección de Usuarios
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == userId;
    }

    // Reglas para el Muro de Vida (Reflexiones)
    match /reflections/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']));
      allow delete: if request.auth.uid == resource.data.userId;
    }

    // Reglas para el Altar de Oración
    match /prayers/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn(); // Permitimos actualizar para unirse en oración (incrementar contador)
      allow delete: if request.auth.uid == resource.data.userId;
    }
  }
}
